<div class="col-md-7 col-sm-12">
  <div class="contact-form">
    {% macro errorList(errors) %}
      {% if errors %}
        <ul class="errors">
          {% for error in errors %}
            <li>{{ error }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endmacro %}
    {% from _self import errorList %}
    <form
      method="post"
      action=""
      accept-charset="UTF-8"
    >
      {{ csrfInput() }}
      <input
        type="hidden"
        name="action"
        value="contact-form/send"
      >
      <div class="c-row">
        <div class="c-col-lg-30 c-col-md-30 c-col-sm-30 c-col-xs-60">
          <div class="input-wrapper">
            <h3>
              <label for="from-name">Ime</label>
            </h3>
            <input
              id="from-name"
              required
              type="text"
              name="fromName"
              value="{{ message.fromName ?? '' }}"
              placeholder="Vaše ime"
            >
            {{ message is defined and message ? errorList(message.getErrors('fromName.firstName')) }}
          </div>
        </div>
        <div class="c-col-lg-30 c-col-md-30 c-col-sm-30 c-col-xs-60">
          <div class="input-wrapper">
            <h3>
              <label for="from-surname">Prezime</label>
            </h3>
            <input
              id="from-surname"
              required
              type="text"
              name="message[lastName]"
              value="{{ message.message.lastName ?? '' }}"
              placeholder="Vaše prezime">
              {{ message is defined and message ? errorList(message.getErrors('message.lastName')) }}
          </div>
        </div>
      </div>
      <div class="c-row">
        <div class="c-col-lg-30 c-col-md-30 c-col-sm-30 c-col-xs-60">
          <div class="input-wrapper">
            <h3>
              <label for="from-email">Email</label>
            </h3>
            <input
              id="from-email"
              required type="email"
              name="fromEmail"
              value="{{ message.fromEmail ?? '' }}"
              placeholder="Vaš email"
            >
            {{ message is defined and message ? errorList(message.getErrors('fromEmail')) }}
          </div>
        </div>
        <div class="c-col-lg-30 c-col-md-30 c-col-sm-30 c-col-xs-60">
          <div class="input-wrapper">
            <h3>
              <label for="phone">Kontakt telefon</label>
            </h3>
            <input
              id="phone"
              type="text"
              name="message[Phone]"
              placeholder="Vaš telefon"
              value="{{ message.massage.phone ?? '' }}"
            >
            {{ message is defined and message ? errorList(message.getErrors('message.phone')) }}
          </div>
        </div>
      </div>
      <div class="input-wrapper">
        <h3>
          <label for="message">Poruka</label>
        </h3>
        <textarea
          rows="10"
          cols="40"
          required id="message"
          name="message[body]'"
        >
          {{ message.message.body ?? '' }}
        </textarea>
        {{ message is defined and message ? errorList(message.getErrors('message.body')) }}
      </div>
      <div class="btn-wrapper">
        <button type="submit">Pošalji</button>
      </div>
    </form>
  </div>
</div>